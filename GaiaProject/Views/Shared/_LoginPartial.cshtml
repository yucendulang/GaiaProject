@using Microsoft.AspNetCore.Identity
@using GaiaDbContext.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHtmlLocalizer<SharedResources> localizer;

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">


            <li class="dropdown">
                <a href="/Manage/Index" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@localizer["欢迎"] @UserManager.GetUserName(User)!<span class="caret"></span></a>
                <ul class="dropdown-menu">

                    <li><a href="/GameInfo/Index?isAdmin=3&GameStatus=0">@localizer["管理游戏"]</a></li>
                    <li><a href="/GameInfo/Index?GameStatus=8">@localizer["结束游戏"]</a></li>

                    <li><a asp-area="" asp-controller="GameInfo" asp-action="FactionList">@localizer["使用种族"]</a></li>
                    <li><a asp-area="" asp-controller="GameInfo" asp-action="ApplyDeleteList">@localizer["等待删除游戏"]</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="/Manage/ChangePassword">@localizer["修改密码"]</a></li>
                    <li><a href="/Manage/ChangeInfo">@localizer["修改信息"]</a></li>
                    <li><a href="/UserFriend">@localizer["查看好友"]</a></li>

                    <li role="separator" class="divider"></li>

                </ul>
            </li>

            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@localizer["退出"]</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register2">@localizer["注册"]</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@localizer["登录"]</a></li>
    </ul>
}

<script src="~/lib/localeplanet/icu.js"></script>
<script src="~/lib/localeplanet/translate.js"></script>
<script src="~/js/messages.js"></script>
